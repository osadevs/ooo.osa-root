		<dev.repo.id>osadev.deployment</dev.repo.id>
		<dev.repo.name>OSA Dev Repository</dev.repo.name>
		<dev.repo.url.up>http://mvn.osadev.org:8081/content/repositories</dev.repo.url.up>
		
